<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/transaction_layout">


    <TextView
        android:id="@+id/transaction_ID_rec"

        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textColor="#888"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/transaction_date_rec"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/transaction_ID_rec"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/transaction_item_rec"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/transaction_date_rec"
        android:layout_toStartOf="@id/transaction_value_rec"
        android:layout_marginStart="15dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/transaction_value_rec"

        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:textSize="18sp"/>

</RelativeLayout>